{% extends 'base.html.twig' %}

{% block title %}Classe !{% endblock %}

{% block body %}
    <div class="container">
       <h1 >LISTE DES Niveaux</h1>
        <button type="submit" class="btn btn-primary ml"><a href="{{path('ajout_niveau')}}" style="color:white; text-decoration:none;, font-weight:bold;">Ajouter</a></button>
    <table class="table table-hover width">
    <thead>
        <tr>
            <th scope="col">id niveau</th>
            <th scope="col">Nom niveau</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    {% for niveau in niveaux %}
        <tbody>
            <tr class="table-active">
                <td > {{niveau.id}} </td>
                <td> {{niveau.labelle}} </td>
                <td> 
                     <button type="submit" class="btn btn-primary"><a href="{{ path('modif_niveau', {
                            id: niveau.id }) }}" style="color:white; text-decoration:none;, font-weight:bold;">Modifier</a></button>
                      <button type="submit" class="btn btn-primary"><a href="{{ path('delete_niveau', {
                            id: niveau.id }) }}" style="color:white; text-decoration:none;, font-weight:bold;">Supprimer</a></button>
                </td>
               
            </tr>
        </tbody>
    {% endfor %}
</table>
    </div>

{% endblock %}
